<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_escuro"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/image_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29000002"
        app:srcCompat="@drawable/desenho_android" />

    <TextView
        android:id="@+id/text_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/seu_app_de_vagas_mobile_j_nior"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/image_android"
        app:layout_constraintStart_toStartOf="@+id/image_android"
        app:layout_constraintTop_toBottomOf="@+id/image_android" />

    <ImageView
        android:id="@+id/image_google_logo"
        android:layout_width="23dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/button_google_login"
        app:layout_constraintEnd_toEndOf="@+id/button_google_login"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="@+id/button_google_login"
        app:layout_constraintTop_toTopOf="@+id/button_google_login"
        app:srcCompat="@drawable/logo_googleg_48dp"
        android:elevation="10dp"/>

    <Button
        android:id="@+id/button_google_login"
        android:layout_width="328dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:fontFamily="@font/roboto"
        android:textFontWeight="500"
        android:letterSpacing="-0.01"
        android:paddingStart="40dp"
        android:textAllCaps="false"
        android:text="@string/entrar_com_google"
        android:textColor="@color/cinza_escuro"
        android:textSize="16dp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/text_logo"
        app:layout_constraintStart_toStartOf="@+id/text_logo"
        app:layout_constraintTop_toBottomOf="@+id/text_logo" />

    <TextView
        android:id="@+id/text_access_without_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acessar_sem_conta"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:textFontWeight="600"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/button_google_login"
        app:layout_constraintStart_toStartOf="@+id/button_google_login"
        app:layout_constraintEnd_toEndOf="@+id/button_google_login"/>

</androidx.constraintlayout.widget.ConstraintLayout>